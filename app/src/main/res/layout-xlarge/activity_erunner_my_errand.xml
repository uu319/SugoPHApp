<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Eseeker.EseekerErrandFullDetails"
    tools:layout_editor_absoluteY="81dp"
    >

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/wallpaper"
        app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.leinardi.android.speeddial.SpeedDialView
            android:id="@+id/speedDial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:sdMainFabClosedSrc="@drawable/fab_add" />

        <!--<android.support.design.widget.FloatingActionButton-->
            <!--android:id="@+id/fabMessage"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="bottom|end"-->
            <!--android:layout_margin="@dimen/fab_margin"-->
            <!--app:srcCompat="@android:drawable/ic_dialog_email" />-->

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">





                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txtOptionName"
                        android:text="Loading..."
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:textSize="30dp"
                        android:fontFamily="@font/bloomsberg"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />
                    <TextView
                        android:id="@+id/txtDatePublished"
                        android:fontFamily="@font/bloomsberg"
                        android:text="Loading..."
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txtCurrentLocation"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            android:gravity="center_horizontal" />



                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:id="@+id/layoutProfile"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:id="@+id/txtStatus"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txtAgo"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:textStyle="italic"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txtPayment"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imgProfpic"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_horizontal"
                                android:elevation="1dp"
                                android:src="@drawable/user"/>
                            <TextView
                                android:id="@+id/txtName"
                                android:textColor="#696969"
                                android:text="Loading..."
                                android:textSize="25dp"
                                android:fontFamily="@font/bloomsberg    "
                                android:layout_gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:padding="7dp"
                                />
                            <TextView
                                android:id="@+id/txtAddress"
                                android:text="TLoading..."
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>




                    </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <LinearLayout
                        android:id="@+id/layoutDetail"
                        android:orientation="vertical"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/txtDescription1"
                            android:text="Loading..."
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textStyle="bold"
                            android:text="Additional Description"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/txtDescription2"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            android:text="Loading..."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btnAccept"
                            android:layout_weight="1"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:background="@drawable/buttonstyle"
                            android:gravity="center_horizontal"
                            android:text="Toggle"
                            android:textSize="20dp"
                            android:fontFamily="@font/bloomsberg"
                             android:enabled="false"
                            android:visibility="invisible"
                            android:textColor="@color/colorWhite"/>
                        <Button
                            android:id="@+id/btnDeny"
                            android:layout_weight="1"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:background="@drawable/buttonstyle_negative"
                            android:gravity="center_horizontal"
                            android:text="Toggle"
                            android:textSize="20dp"
                            android:enabled="false"
                            android:visibility="invisible"
                            android:textColor="@color/colorWhite"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnToggle"
                        android:layout_width="200dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:background="@drawable/buttonstyle"
                        android:gravity="center_horizontal"
                        android:text="Toggle"
                        android:textSize="20dp"
                        android:enabled="false"
                        android:visibility="invisible"
                        android:textColor="@color/colorWhite"
                        />
                </LinearLayout>


        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>


</RelativeLayout>